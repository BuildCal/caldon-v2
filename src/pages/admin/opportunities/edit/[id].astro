                <div class="form-group">
                  <label for="risk_level">Risk Level</label>
                  <select id="risk_level" name="risk_level">
                    <option value="">Select...</option>
                    <option value="Low" selected={opportunity.risk_level === 'Low'}>Low</option>
                    <option value="Low-Medium" selected={opportunity.risk_level === 'Low-Medium'}>Low-Medium</option>
                    <option value="Medium" selected={opportunity.risk_level === 'Medium'}>Medium</option>
                    <option value="Medium-High" selected={opportunity.risk_level === 'Medium-High'}>Medium-High</option>
                    <option value="High" selected={opportunity.risk_level === 'High'}>High</option>
                  </select>
                </div>
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="investor_slots_total">Total Investor Slots</label>
                  <input type="number" id="investor_slots_total" name="investor_slots_total" placeholder="e.g., 4" value={opportunity.investor_slots_total || ''} />
                </div>
                
                <div class="form-group">
                  <label for="investor_slots_remaining">Slots Remaining</label>
                  <input type="number" id="investor_slots_remaining" name="investor_slots_remaining" placeholder="e.g., 2" value={opportunity.investor_slots_remaining || ''} />
                </div>
              </div>
              
              <div class="form-group">
                <label for="key_risks">Key Risks</label>
                <textarea id="key_risks" name="key_risks" rows="3" placeholder="List key risk factors for this investment">{opportunity.key_risks || ''}</textarea>
              </div>
            </fieldset>
            
            <!-- MEDIA -->
            <fieldset>
              <legend>Media & Documents</legend>
              
              {opportunity.image_url && (
                <div class="form-group">
                  <label>Current Image</label>
                  <div class="current-image">
                    <img src={opportunity.image_url} alt="Current" style="max-width: 200px; margin-bottom: 1rem; border: 1px solid #e5e5e5; border-radius: 4px;" />
                  </div>
                </div>
              )}
              
              <div class="form-group">
                <label for="image">{opportunity.image_url ? 'Replace Image' : 'Main Image'}</label>
                <input type="file" id="image" name="image" accept="image/*" />
                <p class="help-text">{opportunity.image_url ? 'Leave empty to keep current image' : 'Upload an image for this opportunity'}</p>
              </div>
              
              <div class="form-group">
                <label for="video_url">Video URL (YouTube/Vimeo)</label>
                <input type="url" id="video_url" name="video_url" placeholder="https://youtube.com/watch?v=..." value={opportunity.video_url || ''} />
              </div>
              
              <div class="form-group">
                <label for="pds_url">Product Disclosure Statement URL</label>
                <input type="url" id="pds_url" name="pds_url" placeholder="Link to PDS document" value={opportunity.pds_url || ''} />
              </div>
              
              <div class="form-group">
                <label for="feasibility_url">Feasibility Study URL</label>
                <input type="url" id="feasibility_url" name="feasibility_url" placeholder="Link to feasibility document" value={opportunity.feasibility_url || ''} />
              </div>
              
              <div class="form-group">
                <label for="info_memorandum_url">Information Memorandum URL</label>
                <input type="url" id="info_memorandum_url" name="info_memorandum_url" placeholder="Link to IM document" value={opportunity.info_memorandum_url || ''} />
              </div>
            </fieldset>
            
            <!-- DISPLAY OPTIONS -->
            <fieldset>
              <legend>Display Options</legend>
              
              <div class="form-row">
                <div class="form-group checkbox-group">
                  <label>
                    <input type="checkbox" id="featured" name="featured" value="true" checked={opportunity.featured === true} />
                    Featured Opportunity (show on homepage)
                  </label>
                </div>
                
                <div class="form-group">
                  <label for="sort_order">Sort Order</label>
                  <input type="number" id="sort_order" name="sort_order" value={opportunity.sort_order || 0} placeholder="0 = default" />
                </div>
              </div>
            </fieldset>
            
            <div class="form-actions">
              <a href="/admin/opportunities" class="btn-cancel">Cancel</a>
              <button type="submit" class="btn-submit">Update Opportunity</button>
            </div>
          </form>
        </>
      ) : error ? (
        <div class="error-message">
          Error loading opportunity: {error}
        </div>
      ) : null}
    </div>
  </section>
</BaseLayout>

